<style type="scss">
    @use "../styles/vars.scss" as vars;

	.header {
		width: 100%;
		height: 50px;
		text-align: center;
		color: vars.$fc("light");
	}

	@media screen and (max-width: 768px) {
		.header-nav {
			width: 100%;
			height: 50px;
			background-color: rgb(40, 40, 40);
			position: fixed;
			transition: 0.4s ease;
		}

		.h-nav-list-active {
			color: rgb(254, 1, 92) !important;
			font-size: 18px !important;
		}

		.m-header-hidden {
			height: 50px !important;
		}

		/* header logo */
		.h-logo {
			width: 100vw;
			height: 50px;
			background-color: rgb(40, 40, 40);
			position: absolute;
			z-index: 5000;
		}

		.h-logo a {
			font-family: "Questrial", "Helvetica Neue", Arial, sans-serif;
			display: block;
			width: 105px;
			height: 50px;
			color: rgb(254, 1, 92);
			position: relative;
		}

		.h-logo a span:first-child {
			position: absolute;
			left: 7px;
			top: 7px;
			font-size: 25px;
		}

		.h-logo a span:last-child {
			position: absolute;
			left: 29px;
			top: 24.5px;
			font-size: 19px;
		}

		/* header nav */
		.h-nav-list {
			display: none;
		}

		/* header humberger */
		/* barger menu content */
		.barger-menu {
			position: relative;
		}

		#barger-menu-list {
			position: absolute;
			z-index: 1000;
			top: -250px;
			border-top: 1px solid var(--base-white);
			background-color: var(--h-nav-bg);
			width: 100%;
			transition: all 0.6s;
		}

		#barger-menu-list.panelactive {
			top: 50px;
		}

		#barger-menu-list ul li,
		#barger-menu-list ul li a {
			font-family: "Questrial", "Helvetica Neue", Arial, sans-serif;
			text-transform: uppercase;
			line-height: 40px;
			display: block;
			height: 40px;
			text-align: left;
			margin-left: 10px;
			font-size: 14px;
		}

		#barger-menu-list ul li:last-child {
			margin-top: 20px;
		}

		/* barger menu btn */
		#barger-menu-btn {
			position: fixed;
			z-index: 6000;
			top: 4px;
			right: 10px;
			display: flex;
			height: 40px;
			width: 40px;
			justify-content: center;
			align-items: center;
			background-color: rgba(0, 0, 0, 0.2);
			transition: 0.5s ease;
		}

		#barger-menu-btn span,
		#barger-menu-btn span:before,
		#barger-menu-btn span:after {
			position: fixed;
			content: "";
			display: block;
			height: 4px;
			width: 25px;
			border-radius: 3px;
			background-color: var(--base-white);
			position: absolute;
		}

		#barger-menu-btn span:before {
			bottom: 8px;
		}

		#barger-menu-btn span:after {
			top: 8px;
		}
	}

	/* 
 * FOR - PC (DESKTOP)
 * 画面幅が769px以上の場合に適用されるスタイル
*/

	@media screen and (min-width: 769px) {
		.header-nav {
			width: 100%;
			height: 50px;
			background-color: var(--h-nav-bg);
			display: flex;
			transition: 0.9s ease;
		}

		.header-body {
			width: 100%;
		}

		/* header logo */
		.h-logo {
			width: 105px;
			height: 50px;
		}

		.h-logo a {
			font-family: "Questrial", "Helvetica Neue", Arial, sans-serif;
			display: block;
			width: 105px;
			height: 50px;
			color: var(--h-nav-list-active);
			position: relative;
		}

		.h-logo a span:first-child {
			position: absolute;
			left: 7px;
			top: 7px;
			font-size: 25px;
		}

		.h-logo a span:last-child {
			position: absolute;
			left: 29px;
			top: 24.5px;
			font-size: 19px;
		}

		/* header nav */

		nav.h-nav-list ul li {
			display: inline-block;
			height: 50px;
		}

		li.h-nav-list-item {
			height: 50px;
			text-align: center;
			line-height: 49px;
			text-transform: uppercase;
			padding: 0 15px;
		}

		li.h-nav-list-item a {
			display: block;
			color: var(--base-white);
			height: 100%;
			font-size: 17px;
		}

		li.h-nav-list-item a:hover {
			color: var(--h-nav-list-active) !important;
			/* transition-delay: 0.3s; */
			transition-timing-function: ease-in;
			transition-duration: 0.2s;
		}

		li.h-nav-list-item a:active {
			color: var(--h-nav-list-active) !important;
			/* transition-delay: 0.3s; */
			transition-timing-function: ease-in;
			transition-duration: 0.2s;
		}

		nav.h-nav-list-main {
			min-width: 270px;
		}

		.h-nav-list-sub {
			width: 90px;
			height: 50px;
			margin-left: auto;
		}

		.h-nav-list:last-child {
			margin-left: auto;
		}

		.h-nav-list-active {
			color: var(--h-nav-list-active) !important;
			font-size: 1.2em !important;
		}

		/* header humberger */
		.barger-menu {
			display: none;
		}
	}
</style>
